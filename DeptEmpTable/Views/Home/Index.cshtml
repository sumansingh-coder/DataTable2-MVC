@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <!-- Your content goes here -->

    <div class="container text-center">
        <h1>Welcome To My WebSite!</h1>

        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <a class="btn btn-outline-primary btn-block mb-3" data-toggle="modal" data-target="#addDepartmentModal">Add New Department</a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-outline-primary btn-block mb-3" data-toggle="modal" data-target="#addEmployeeModal">Add New Employee</a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-outline-primary btn-block mb-3" data-toggle="modal" data-target="#viewDetailsModal">View Details</a>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <div class="modal fade" id="addDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDepartmentModalLabel">Add New Department</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Add your modal content for adding a department here -->
                    <!-- Example: <p>Modal content for adding a department.</p> -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Similar modals for addEmployeeModal and viewDetailsModal -->

    <script src="https://code.jquery.com/jquery-3.6.4.slim.min.js" integrity="sha384-u7Zp/fzI8I3q1tq1lfrhP4VjlPExGgqTp1BfBxLlJZGiCJqIA1k7F2uhv6lVvCD0" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyCRBtL1ZgqLX60Ptn7lv+prJPUWrTf68" crossorigin="anonymous"></script>

</body>
</html>